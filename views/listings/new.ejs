<% layout("/layouts/boilerplate.ejs") %>

  <div class="container mt-5 mb-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 bg-light p-4 shadow rounded">
        <!-- Heading -->
        <h2 class="mb-4 text-center">Create New Listing</h2>

        <!-- Listing Form Starts -->
        <form action="/listings" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">

          <!-- Title -->
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listings[title]" placeholder="Enter Catchy Title" class="form-control" id="title"
              required />
            <div class="valid-feedback">Title looks good</div>
          </div>

          <!-- Description -->
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listings[description]" id="description" class="form-control" rows="4"
              placeholder="Describe your listing" required></textarea>
            <div class="valid-feedback">Description looks good</div>
          </div>

          <!-- Image URL -->
          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input type="file" name="listings[image]" class="form-control" id="image" placeholder="Paste image URL" />
            <p class="form-text text-muted">You can paste an image URL for now.</p>
          </div>

          <!-- Price -->
          <div class="mb-3">
            <label for="price" class="form-label">Price (â‚¹)</label>
            <input type="text" name="listings[price]" placeholder="Enter your price" class="form-control" id="price"
              required />
            <div class="invalid-feedback">Please enter a valid price</div>
          </div>

          <!-- Location Info -->
          <div class="row">
            <!-- Country -->
            <div class="mb-3 col-md-6">
              <label for="country" class="form-label">Country</label>
              <input type="text" name="listings[country]" placeholder="e.g. India" class="form-control" id="country"
                required />
              <div class="invalid-feedback">Please enter the country name</div>
            </div>

            <!-- City / Location -->
            <div class="mb-3 col-md-6">
              <label for="location" class="form-label">Location</label>
              <input type="text" name="listings[location]" placeholder="e.g. Goa, Mumbai" class="form-control"
                id="location" required />
              <div class="invalid-feedback">Please enter the location</div>
            </div>
          </div>

          <!-- Submit Button -->
          <div class="d-grid">
            <button type="submit" class="btn btn-primary">Add New Listing</button>
          </div>
        </form>
        <!-- Listing Form Ends -->
      </div>
    </div>
  </div>