<% layout("/layouts/boilerplate.ejs") %>

  <body style="background-color: #f8f9fa;">
    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">

          <!-- Card Style for Form -->
          <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body px-5 py-4">

              <h3 class="mb-4 text-center text-primary fw-bold">Edit Your Listing</h3>

              <!-- Form Starts -->
              <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate>

                <!-- Title -->
                <div class="mb-3">
                  <label for="title" class="form-label fw-semibold">Title</label>
                  <input type="text" name="listings[title]" value="<%= listing.title %>" class="form-control" required>
                  <div class="valid-feedback">Title looks good</div>
                </div>

                <!-- Description -->
                <div class="mb-3">
                  <label for="description" class="form-label fw-semibold">Description</label>
                  <input type="text" name="listings[description]" value="<%= listing.description %>"
                    class="form-control" required>
                  <div class="valid-feedback">Description looks good</div>
                </div>

                <!-- Image URL -->
                <div class="mb-3">
                  <label class="form-label fw-semibold">Image URL</label>
                  <input type="text" name="listings[image]" value="<%= listing.image %>" class="form-control" required>
                </div>

                <!-- Preview Image -->
                <div class="mb-3 text-center">
                  <img src="<%= listing.image.url %>" class="img-fluid rounded-3 shadow"
                    style="max-height: 250px; object-fit: cover;" alt="Listing Image">
                </div>

                <!-- Price -->
                <div class="mb-3">
                  <label for="price" class="form-label fw-semibold">Price</label>
                  <input type="text" name="listings[price]" value="<%= listing.price %>" class="form-control" required>
                </div>

                <!-- Country -->
                <div class="mb-3">
                  <label for="country" class="form-label fw-semibold">Country</label>
                  <input type="text" name="listings[country]" value="<%= listing.country %>" class="form-control"
                    required>
                  <div class="invalid-feedback">Please enter your country</div>
                </div>

                <!-- Location -->
                <div class="mb-3">
                  <label for="location" class="form-label fw-semibold">Location</label>
                  <input type="text" name="listings[location]" value="<%= listing.location %>" class="form-control"
                    required>
                  <div class="invalid-feedback">Please enter your location</div>
                </div>

                <!-- Submit Button -->
                <div class="d-grid mt-4">
                  <button class="btn btn-primary btn-lg fw-semibold">Update Listing</button>
                </div>
              </form>
              <!-- Form Ends -->

            </div>
          </div>

        </div>
      </div>
    </div>
  </body>