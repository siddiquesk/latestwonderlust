<% layout("/layouts/boilerplate") %>
  <div class="row mt-2">
    <h1 class="col-6 offset-3 mb-4">Sign Up on Wonderlust</h1>
    <div class="col-6 offset-3">
      <form action="/signup" method="POST" novalidate class="needs-validation">
        <div class="mb-2">
          <label for="username" class="form-label">Username</label>
          <input type="text" name="username" placeholder="enter username" class="form-control" id="username" required />
          <div class="valid-feedback">Username Looks Good</div>
        </div>
        <div class="mb-2">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" placeholder="enter Your Email" class="form-control" id="email" required />
        </div>
        <div class="mb-2">
          <label for="phone" class="form-label">Phone</label>
          <input type="number" name="phone" placeholder="enter Your Phone" class="form-control" id="phone" required />
        </div>
        <div class="mb-2">
          <label for="password" class="form-label">Password</label>
          <input type="password" name="password" placeholder="Enter Your Password" class="form-control" id="password"
            required />
        </div>
        <button class="btn btn-primary mt-2">Sign Up</button>
      </form>
    </div>
  </div>